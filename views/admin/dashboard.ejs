    <script>
        fetch('fetch_orders_data.php')
            .then(response => response.json())
            .then(data => {
                const ctxSales = document.getElementById('salesChart').getContext('2d');
                new Chart(ctxSales, {
                    type: 'line',
                    data: {
                        labels: data.labels,
                        datasets: [{
                            label: 'Total Sales',
                            data: data.amounts,
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1,
                            fill: true,
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            });

        fetch('fetch_orders_status_data.php')
            .then(response => response.json())
            .then(data => {
                const ctxDoughnut = document.getElementById('orderStatusDoughnutChart').getContext('2d');
                new Chart(ctxDoughnut, {
                    type: 'doughnut',
                    data: {
                        labels: data.statusLabels,
                        datasets: [{
                            label: 'Order Status Distribution',
                            data: data.statusCounts,
                            backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'],
                        }]
                    },
                    options: {
                        responsive: true,
                    }
                });
            });

        function loadPage(page) {
            document.getElementById("container").innerHTML = `<object type="text/html" data="${page}" style="width:100%; height:100vh;"></object>`;
        }
    </script>
