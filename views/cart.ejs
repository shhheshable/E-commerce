<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        button {
            background-color: #008000;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }
        button:hover {
            background-color: #005700;
        }
    </style>
</head>
<body>
    <h1>Your Cart</h1>
    <div class="container">
        <% if (cartItems && cartItems.length > 0) { %> 
            <table>
                <thead>
                    <tr>
                        <th>Product Image</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% cartItems.forEach(item => { %>
                        <tr>
                            <td><img src="<%= item.Picture %>" alt="<%= item.ProductName %>" style="width: 50px; height: auto;"></td>
                            <td><%= item.ProductName %></td>
                            <td>P<%= parseFloat(item.Price).toFixed(2) %></td> 
                            <td>
                                <input type="number" name="quantity" value="<%= item.Quantity %>" min="1" required 
                                       onchange="updateTotal(this, parseFloat('<%= item.Price %>'))">
                            </td>
                            <td class="total-price" id="total-price-<%= item.CartID %>">$<%= (parseFloat(item.Price) * item.Quantity).toFixed(2) %></td>
                            <td>
             <a href="/cart/delete/<%= item.CartID %>" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
    </td>

                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
    </div>

    <script>
        function updateTotal(quantityInput, price) {
            const quantity = Number(quantityInput.value);
            const totalPrice = (price * quantity).toFixed(2); 
            const cartId = quantityInput.closest('tr').querySelector('.total-price').id.split('-')[2]; 
            document.getElementById(`total-price-${cartId}`).textContent = `$${totalPrice}`; 
        }
    </script>
</body>
</html>
